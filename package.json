{
  "name": "ember-es6-class-codemod",
  "version": "0.2.0",
  "description": "Codemods for transforming ember app code to native ES6 class syntax with decorators.",
  "keywords": [
    "codemod-cli"
  ],
  "homepage": "https://github.com/ember-codemods/ember-es6-class-codemod#readme",
  "bugs": {
    "url": "https://github.com/ember-codemods/ember-es6-class-codemod/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ember-codemods/ember-es6-class-codemod.git"
  },
  "license": "MIT",
  "author": "",
  "files": [
    "/bin",
    "/lib",
    "/transforms/helpers",
    "/transforms/ember-object/index.js"
  ],
  "main": ".eslintrc.js",
  "bin": {
    "ember-es6-class-codemod": "./bin/cli.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "release": "release-it",
    "test": "eslint . && codemod-cli test && node ./test/run-test.js",
    "update-docs": "codemod-cli update-docs"
  },
  "dependencies": {
    "codemod-cli": "^1.0.0",
    "fs-extra": "^8.0.1",
    "git-repo-info": "^2.1.0",
    "minimatch": "^3.0.4",
    "puppeteer": "^1.17.0",
    "sync-disk-cache": "^1.3.3",
    "walk-sync": "^1.1.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "execa": "^1.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "release-it": "^12.2.1",
    "release-it-lerna-changelog": "^1.0.3"
  },
  "engines": {
    "node": "8.* || 10.* || >= 12.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:release": "yarn update-docs"
    },
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    }
  }
}
